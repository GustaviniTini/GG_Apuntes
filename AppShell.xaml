<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GG_Apuntes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GG_Apuntes.Views"
    Shell.FlyoutBehavior="Disabled">


    <TabBar>
        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate views:GG_AllApuntesPage}"
            Icon="{OnPlatform 'icon_notes.png'}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:GG_AboutPage}"
            Icon="{OnPlatform 'icon_about.png'}" />
    </TabBar>

</Shell>